<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
    </style>
<h1>Transactions of <%= user.username %></h1>

    <div class = "row">
        <p>Here is your list of Transactions</p>
        <table>
            <tr>
                <th><a class="btn btn-lg btn-primary"
                    href="/summary">group by category</a></th>
                <th><a class="btn btn-lg btn-primary"
                    href="?sortBy=category">sort by category</a></th>
                <th><a class="btn btn-lg btn-primary"
                    href="?sortBy=amount">sort by amount</a></th>
                <th><a class="btn btn-lg btn-primary"
                    href="?sortBy=description">sort by description</a></th>
                <th><a class="btn btn-lg btn-primary"
                    href="?sortBy=date">sort by date</a></th>
            </tr>
        </table>
        <table>
            <tr>
                <th>description</th>
                <th>amount</th>
                <th>category</th>
                <th>date</th>
                <th>delete</th>
                <th>edit</th>
            </tr>
            <% trs.forEach(tr => { %>
                <tr>
                    <td><%= tr.description %> </td>                      
                    <td><%= tr.amount %> </td>
                    <td><%= tr.category %> </td>
                    <td><%= tr.date.toDateString() %> </td>
                    <td><a href="/transaction/remove/<%=tr._id %>">
                        <i class="bi bi-trash"></i>
                      </a>
                    </td>
                    <td><a href="/transaction/edit/<%=tr._id %>">
                        <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                </tr>
            <% }) %>
        </table>
        <h2>Add a new transaction</h2>
        <form method="post" action="transaction">
            <input type="text" name="description" placeholder="description">
            <br>
            <input type="number" step="0.01" name="amount" placeholder="amount">
            <br>
            <input type="text" name="category" placeholder="category">
            <br>
            <input type="date" name="date">
            <br>
            <input type="submit" value="submit">
        </form>
    </div>
